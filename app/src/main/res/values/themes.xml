<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.PracticumAndroidDiploma" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Основные цвета темы для XML/View-части -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/black</item>

        <item name="colorSurface">@color/gray400</item>
        <item name="colorOnSurface">@color/black</item>

        <item name="colorSurfaceVariant">@color/gray100</item>
        <item name="colorOnSurfaceVariant">@color/black</item>

        <!-- Системные бары -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/bottom_navigation_view_background</item>

        <!-- Иконки в статус-баре тёмные на светлом фоне -->
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.PracticumAndroidDiploma" parent="Base.Theme.PracticumAndroidDiploma" />

</resources>
